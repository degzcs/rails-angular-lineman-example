defaults: &defaults
  USE_AWS_S3: false
  USE_WACOM_DEVICE: true
  ALEGRA_SYNC: false

development:
  <<: *defaults
  USE_AWS_S3: false
  USE_WACOM_DEVICE: false
  ALEGRA_USERNAME: <value>
  ALEGRA_TOKEN: <value>
  ALEGRA_SYNC: false
  RDS_DB_NAME: <value>
  RDS_USERNAME: <value>
  RDS_PASSWORD: <value>
  RDS_HOSTNAME: <value>
  RDS_PORT: <value>
  AWS_S3_BUCKET_NAME: <value>
  AWS_S3_ACCESS_KEY_ID: <value>
  AWS_S3_SECRET_ACCESS_KEY: <value>
  AWS_S3_REGION: <value>
  MANDRILL_API_KEY: <value>

test:
  <<: *defaults
  domain: test.host
  ALEGRA_USERNAME: <value>
  ALEGRA_TOKEN: <value>
  ALEGRA_SYNC: false
  USE_WACOM_DEVICE: true
  USE_AWS_S3: false
  MANDRILL_API_KEY: <value>

staging:
  <<: *defaults
  ALEGRA_USERNAME: <value>
  ALEGRA_TOKEN: <value>
  USE_AWS_S3: true
  USE_WACOM_DEVICE: true
  MANDRILL_API_KEY: <value>

production:
  <<: *defaults
  USE_AWS_S3: true
  USE_WACOM_DEVICE: true
  ALEGRA_USERNAME: <value>
  ALEGRA_TOKEN: <value>
  RDS_DB_NAME: <value>
  RDS_USERNAME: <value>
  RDS_PASSWORD: <value>
  RDS_HOSTNAME: <value>
  RDS_PORT: <value>
  AWS_S3_BUCKET_NAME: <value>
  AWS_S3_ACCESS_KEY_ID: <value>
  AWS_S3_SECRET_ACCESS_KEY: <value>
  AWS_S3_REGION: <value>
  MANDRILL_API_KEY: <value>
