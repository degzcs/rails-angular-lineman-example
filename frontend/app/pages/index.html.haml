!!!
%html{"ng-app" => "app"}
  %head
    %base{"href" => "/"}
    %title= "TrazOro"
    %link{"href" => "/css/app.css", "media" => "all", "rel" => "stylesheet", "type" => "text/css"}
  %body
    %div{:layout => "row", "ng-controller" => "SidebarCtrl"}
      /--------------------------------------- Side Bar -------------------------------/
      %md-sidenav.md-sidenav-left.md-whiteframe-z2{"md-component-id" => "left", "md-is-locked-open" => "$mdMedia('gt-md')" }
        %md-toolbar.md-theme-indigo
          %h1.md-toolbar-tools Trazoro
        %md-content
          %div{:layout => "column"}
            %tr-sidebar-button{"ng-repeat"=> "option in options", name: "option.name" , url:"option.url"}
      /--------------------------------------- Content -------------------------------/
      %md-content{:flex => ""}
        %md-toolbar
          %h2.md-toolbar-tools
            %md-button.md-primary{"hide-gt-md" => "", "ng-click" => "toggleLeft()"}
              Toggle left
            %span Toolbar
        %md-content.md-padding
          .row
            // {{user}}
          .row
            .large-6.large-offset-3
              %ul.nav.navbar-nav.pull-right
                %li{"ng-if" => "!isAuthenticated()"}
                  %a{"ui-sref" => "login"} Login
                %li{"ng-if" => "isAuthenticated()"}
                  %a{"ui-sref" => "logout"} Logout
                %li
                  %a{"ui-sref" => "scanner"} Scanner Test
                %li
                  %a{"ui-sref" => "providerList"} List Providers  
                %li
                  %a{"href" => "#", "onclick"=> "FunctionCob()"} Generate PDF File

            .row

            .fadeZoom{"ui-view" => ""}
    %script{"src" => "/js/app.js", "type" => "text/javascript"}