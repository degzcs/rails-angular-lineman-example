%md-content
  %div{:layout => "column"}
    %div.search-tool-header{:layout => "row"}
      %div{flex: "50"}
        %md-button.md-primary.md-raised{"aria-label" => "New", "ui-sref" => "search_rucom({type: 'client'})"} Crear Cliente
          %md-icon{"md-svg-icon"=>"content:add_circle"}
      %md-input-container{:flex => "", "md-no-float"=>""}
        %input{"ng-model" => "queryName", :type => "text", :placeholder => "Filtrar por nombre"}
          %md-icon.search{"md-svg-icon"=>"action:search"}
      %md-input-container{:flex => "","md-no-float"=>""}
        %input{"ng-model" => "queryId", :type => "text", :placeholder => "Filtrar por num. documento"}
          %md-icon.search{"md-svg-icon"=>"action:search"}
    %md-content{:flex => "flex", :layout => "column", "ng-click" => "toggleSearch=false"}
      %md-table-client{:headers => "headers", :content => "content", :pages => "pages", :sortable => "sortable", :filters => "search", "custom-class" => "custom", :thumbs => "thumbs", :count => "count", "current-client" => "currentClient", "query-name" => "queryName", "query-id" => "queryId", "query-focus" => "queryFocus"}
