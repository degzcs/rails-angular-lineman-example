%md-content
  .seller.md-padding
    %md-content
      .purchase-form
      %section
        .seller
          %h3{'sticky-prev-state' => 'active', 'sticky-state' => 'next'}
            Informacion de Proveedor
          .row{'layout' => 'row'}
            .select-provider{'flex' => ''}
              %md-select{'placeholder' => 'Seleccione un porveedor', 'ng-model' => 'provider_id'}
                %md-option{'value'=> 'provider_id'}
                  Proveedor numero 1
            .taked-photo{'layout' => 'row', 'layout-align'=>'end center'}
              .photo
                ////// photo
          .row{'layout' => 'row'}
            .create-provider{'flex' => ''}
              %md-button.md-raised.md-primary.margined
                Crear proveedor
            .take-photo{'layout' => 'row', 'layout-align'=>'end center'}
              %md-button.md-raised.md-primary.margined
                Tomar Foto
              / %md-button.md-raised.margined
              /   Borrar
      %section
        .origin-certificate
          %h3{'sticky-prev-state' => 'active', 'sticky-state' => 'next'}
            Certificado de Origen
          .row{'layout' => 'row'}
            .oc-number{'flex' => 50}
              %md-input-container.md-input-has-value
                %label{'for' => 'input_01U'} Numero de Certificado de origen
                %input#input_01U.ng-pristine.ng-untouched.ng-valid.md-input{'aria-invalid' => 'false', 'ng-model' => 'user.title', 'tabindex' => '0'}
            .oc-name{'layout' => 'row', 'layout-align'=>'end center'}
              %span {{origin_certificate_file}}
          .row{'layout' => 'row', 'layout-align'=>'end center'}
            .upload-oc
              .button-action.md-padding
                %md-button.md-raised.md-primary.margined{'ng-file-select' => '', 'ng-model' => 'purchaseData.origin_certificate_file'}
                  Upload file
