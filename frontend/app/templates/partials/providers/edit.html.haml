%div{:layout => "column"}
  %md-toolbar.md-primary
    %h1.md-toolbar-tools
      Provider edition form
  %md-tabs{"md-selected" => "formTabControl.selectedIndex"}
    %md-tab#tab1{"aria-controls" => "tab1-content"}
      {{ formTabControl.firstLabel }}
    %md-tab#tab2{"aria-controls" => "tab2-content", "ng-disabled" => "!formTabControl.secondUnlocked"}
      {{ formTabControl.secondLabel }}
      
  %ng-switch.tabpanel-container{:on => "formTabControl.selectedIndex"}
    %form{:name => "providereditionForm"}
      #tab1-content{"aria-labelledby" => "tab1", "md-swipe-left" => "next()", "md-swipe-right" => "previous()", "ng-switch-when" => "0", :role => "tabpanel"}
        %md-content.md-padding{:layout => "row", "layout-sm" => "column", "md-theme" => "default", :style => "font-size:1.2em"}
          .md-tile-left{:flex => "10"}
            %img.face{:alt => "", "ng-src" => "{{currentProvider.pic}}"}
          %md-input-container{:flex => "25"}
            %label First Name
            %input{:readonly => "true", "ng-model" => "currentProvider.first_name"}
          %md-input-container{:flex => "25"}
            %label Last Name
            %input{:readonly => "true", "ng-model" => "currentProvider.last_name"}
          %md-input-container{:flex => "30"}
            %label {{rucomIDField.label}}
            %input{:readonly => "true", "ng-model" => "currentProvider.rucom[rucomIDField.field]"}
            %md-tooltip{"md-direction" => "right", "md-visible" => "formTabControl.secondUnlocked"} 
              %span.ion-android-checkmark-circle &nbsp;válido
        %md-content.md-padding
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => ""}
              %label ID
              %input{:readonly => "true", "ng-model" => "currentProvider.document_number"}
            %md-input-container{:flex => ""}
              %label Type
              %input{:readonly => "true", "ng-model" => "currentProvider.rucom.provider_type"}
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => "20"}
              %label Phone Number
              %input{:required => "true", :name => "phone_number", "ng-model" => "currentProvider.phone_number", :placeholder => "(3XX) XXX XXXXX"}
              %div{"ng-messages" => "providereditionForm.phone_number.$error"}
                %div{"ng-message" => "required"} This is required
            %md-input-container{:flex => "30"}
              %label E-mail
              %input{:required => "true", :type => "email", :name => "email", "ng-model" => "currentProvider.email", :placeholder => "mail@example.com"}
              %div{"ng-messages" => "providereditionForm.email.$error"}
                %div{"ng-message" => "required"} This is required
                %div{"ng-message" => "email"} Enter a valid email
            %md-input-container{:flex => "50"}
              %label Address
              %input{:required => "true", :name => "address", "ng-model" => "currentProvider.address", :placeholder => "CLL/CR X XX - XX"}
              %div{"ng-messages" => "providereditionForm.address.$error"}
                %div{"ng-message" => "required"} This is required
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => ""}
              %label State
              %input{"ng-model" => "currentProvider.city"}
            %md-input-container{:flex => ""}
              %label City
              %input{"ng-model" => "currentProvider.state"}
            %md-input-container{:flex => ""}
              %label Population Center
              %input{"ng-model" => "currentProvider.postalCode"}
          %div{:layout => "", "layout-align" => "space-between center", "layout-margin" => "", "layout-sm" => "column"}
            %div{:flex => ""}
              (RUCOM válido:)
              %md-checkbox{"aria-label" => "Disabled", "ng-model" => "formTabControl.secondUnlocked"}
            %md-button{"ng-disabled" => "!formTabControl.secondUnlocked", :class => "md-raised md-primary", "ng-click" => "next()"} Next
      #tab2-content{"aria-labelledby" => "tab2", "md-swipe-left" => "next()", "md-swipe-right" => "previous()", "ng-switch-when" => "1", :role => "tabpanel"}
        %md-content.md-padding{:layout => "row", "layout-sm" => "column", "md-theme" => "default", :style => "font-size:1.2em"}
          View for {{ formTabControl.secondLabel }}
        %md-content.md-padding
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => "25"}
              %label ID
              %input{"ng-model" => "currentProvider.id"}
            %md-input-container{:flex => "40"}
              %label Type
              %input{"ng-model" => "currentProvider.type"}
            %md-select{:flex => "35", "ng-model" => "currentProvider.prov_type", :placeholder => "Provider type"}
              %md-option{:value => "1"} Comercializador
              %md-option{:value => "2"} Titular
              %md-option{:value => "3"} Solicitante Legalización De Minería
              %md-option{:value => "4"} Beneficiario Área Reserva Especial
              %md-option{:value => "5"} Consumidor
              %md-option{:value => "6"} Barequero
              %md-option{:value => "7"} Subcontrato de formalización
              %md-option{:value => "8"} Planta de Beneficio
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => ""}
              %label Phone Number
              %input{"ng-model" => "currentProvider.phone_nb", :placeholder => "(3XX) XXX XXXXX"}
            %md-input-container{:flex => ""}
              %label Email
              %input{"ng-model" => "currentProvider.email", :type => "email"}
          %md-input-container
            %label Address
            %input{"ng-model" => "currentProvider.address", :placeholder => "CLL/CR X XX - XX"}
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => ""}
              %label City
              %input{"ng-model" => "currentProvider.city"}
            %md-input-container{:flex => ""}
              %label State
              %input{"ng-model" => "currentProvider.state"}
            %md-input-container{:flex => ""}
              %label Postal Code
              %input{"ng-model" => "currentProvider.postalCode"}
          %div{:layout => "", "layout-align" => "space-between center", "layout-margin" => "", "layout-sm" => "column"}
            %md-button{"ng-disabled" => "!formTabControl.secondUnlocked", :class => "md-raised md-primary", "ng-click" => "previous()"} Prev