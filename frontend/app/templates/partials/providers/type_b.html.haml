%div{:layout => "column", :style => "padding-left:20px; padding-right:20px;"}
  %md-tabs{"md-selected" => "formTabControl.selectedIndex"}
    %md-tab#tab1{"aria-controls" => "tab1-content"}
      {{ formTabControl.firstLabel }}
    %md-tab#tab2{"aria-controls" => "tab2-content", "ng-disabled" => "!newProvider.has_company"}
      {{ formTabControl.secondLabel }}
      
  %ng-switch.tabpanel-container{:on => "formTabControl.selectedIndex"}
    %form{:name => "providerCreateForm", "novalidate" => "novalidate"}
      #tab1-content{"aria-labelledby" => "tab1", "md-swipe-left" => "next()", "md-swipe-right" => "previous()", "ng-switch-when" => "0", :role => "tabpanel"}
        %md-content.md-padding{:layout => "row", "layout-sm" => "column", "md-theme" => "default", :style => "font-size:1.2em"}
          .md-tile-left.cam{:flex => "10"}
            %md-button.md-fab.md-accent.md-default-theme.cam{"aria-label" => "Photo", :md-ripple-size => "partial", "ng-href" => "#scanner", "ng-click" =>"scanner(1)"} +
              %img.face.cam{:ng-src => "{{newProvider.photo_file}}"}  
                %md-tooltip{"md-visible" => "demo.showTooltip"}
                  Photo
                  %span.ion-android-checkmark-circle
          %md-input-container{:flex => ""}
            %label First name
            %input{:name => "first_name", "ng-model" => "newProvider.first_name", :required => ""}
            %div{"ng-messages" => "providerCreateForm.first_name.$error"}
              %div{"ng-message" => "required"} This is required.
          %md-input-container{:flex => ""}
            %label Last name
            %input{:name => "last_name", "ng-model" => "newProvider.last_name", :required => ""}
            %div{"ng-messages" => "providerCreateForm.last_name.$error"}
              %div{"ng-message" => "required"} This is required.
          %md-input-container{:flex => ""}
            %label {{rucomIDField.label}}
            %input{:readonly => "true", "ng-model" => "newProvider.rucom[rucomIDField.field]"}
            %md-tooltip{"md-direction" => "botton", "md-visible" => "true"} 
              %span.ion-android-checkmark-circle &nbsp;vÃ¡lido
          %div{:flex => "", :layout => "row"}
            %md-input-container
              %label ID document number
              %input{:name => "document_number", "ng-model" => "newProvider.document_number", :required => ""}
              %div{"ng-messages" => "providerCreateForm.document_number.$error"}
                %div{"ng-message" => "required"} This is required.
            %div
              %span
                {{newProvider.identification_number_file[0].name}}
              .upload-oc{'flex' => ''}
                .button-action.md-padding
                  %md-button.md-flat.margined{'aria-label' => 'identification_number_file', 'ng-file-select' => '', 'ng-model' => 'newProvider.identification_number_file'}
                    %md-icon{"md-svg-icon"=>"file:file_upload"}
              .md-tile-left.cam{:flex => "10"} 
                %md-button.md-fab.md-accent.md-default-theme.cam{"aria-label" => "identification_number_file", "md-ripple-size" => "partial",:ng-href => "#scanner",'ng-click' => "scanner(2)"}
                  %md-icon{"md-svg-icon" => "image:camera_alt"}
                  %md-tooltip{"md-visible" => "demo.showTooltip"}
                    Scan
        %md-content.md-padding{:layout => "", "layout-sm" => "column"}
          %md-input-container{:flex => ""}
            %label Provider type
            %input{"ng-model" => "newProvider.rucom.provider_type", "ng-readonly" => "true", :placeholder => "Provider type"}
          %md-input-container{:flex => "17"}
            %label Phone Number
            %input{:name => "phone_number", "ng-model" => "newProvider.phone_number", :placeholder => "(555) 555 5555", :required => ""}
            %div{"ng-messages" => "providerCreateForm.phone_number.$error"}
              %div{"ng-message" => "required"} This is required.
          %md-input-container{:flex => ""}
            %label Email
            %input{:name => "email", "ng-model" => "newProvider.email", :type => "email", :required => ""}
            %div{"ng-messages" => "providerCreateForm.email.$error"}
              %div{"ng-message" => "required"} This is required.
              %div{"ng-message" => "email"} Enter a valid email           
        %md-content.md-padding
          %md-input-container{:flex => ""}
            %label Address
            %input{:name => "address", "ng-model" => "newProvider.address", :placeholder => "CLL/CR 1 22 - 33", :required => ""}
            %div{"ng-messages" => "providerCreateForm.address.$error"}
              %div{"ng-message" => "required"} This is required.
        %br
        %div{:layout => "row", "layout-align" => "space-between start", "layout-sm" => "column"}
          %md-autocomplete{:required => "true", :flex => "30", "md-item-text" => "state.name", "md-items" => "state in stateSearch(searchState)", "md-no-cache" => "true", "md-search-text" => "searchState", "md-search-text-change" => "searchTextStateChange(searchState)", "md-selected-item" => "selectedState", "md-selected-item-change" => "selectedStateChange(state)", :placeholder => "State"}
            %span{"md-highlight-text" => "searchState"} {{state.name}}
          %md-autocomplete{:required => "true", :flex => "30", "md-item-text" => "city.name", "md-items" => "city in citySearch(searchCity)", "md-no-cache" => "true", "md-search-text" => "searchCity", "md-search-text-change" => "searchTextCityChange(searchCity)", "md-selected-item" => "selectedCity", "md-selected-item-change" => "selectedCityChange(city)", "ng-disabled" => "cityDisabled", :placeholder => "City"}
            %span{"md-highlight-text" => "searchCity"} {{city.name}}
          %md-autocomplete{:required => "true", :flex => "30", "md-item-text" => "populationCenter.name", "md-items" => "populationCenter in populationCenterSearch(searchPopulationCenter)", "md-no-cache" => "true", "md-search-text" => "searchPopulationCenter", "md-search-text-change" => "searchTextPopulationCenterChange(searchPopulationCenter)", "md-selected-item" => "selectedPopulationCenter", "md-selected-item-change" => "selectedPopulationCenterChange(populationCenter)", "ng-disabled" => "populationCenterDisabled", :placeholder => "Population Center"}
            %span{"md-highlight-text" => "searchPopulationCenter"} {{populationCenter.name}}
        %br
        %div{:layout => "row", "layout-align" => "space-between center", "layout-margin" => "", "layout-sm" => "column"}
          %div{:layout => "row", :flex => "50", "layout-align" => "space-between center"}
            %div{:layout => "row", :flex => "", "layout-align" => "space-between center"}
              %div{:layout => "row", :flex => "15", "layout-align" => "space-between center"}
                .md-tile-left.cam{:flex => "10"} 
                  %md-button.md-fab.md-accent.md-default-theme.cam{"aria-label" => "mining_register_file", "md-ripple-size" => "partial",:ng-href => "#scanner",'ng-click' => "scanner(3)"}
                    %md-icon{"md-svg-icon" => "image:camera_alt"}
                    %md-tooltip{"md-visible" => "demo.showTooltip"}
                      Mining Record
                .upload-oc{'flex' => ''}
                  .button-action.md-padding
                    %md-button.md-flat.margined{"aria-label" => "mining_register_file", 'ng-file-select' => '', 'ng-model' => 'newProvider.mining_register_file'}
                      %md-icon{"md-svg-icon"=>"file:file_upload"}  
                      Mining register
              %div{:layout => "row", :flex => "15", "layout-align" => "space-between center"}
                %span
                  {{newProvider.mining_register_file[0].name}}
              %div{:layout => "row", :flex => "15", "layout-align" => "space-between center"}
                .md-tile-left.cam{:flex => "10"} 
                  %md-button.md-fab.md-accent.md-default-theme.cam{"aria-label" => "rut_file", "md-ripple-size" => "partial",:ng-href => "#scanner",'ng-click' => "scanner(4)"}
                    %md-icon{"md-svg-icon" => "image:camera_alt"}
                    %md-tooltip{"md-visible" => "demo.showTooltip"}
                      RUT file
                .upload-oc{'flex' => ''}
                  .button-action.md-padding
                    %md-button.md-flat.margined{"aria-label" => "rut_file", 'ng-file-select' => '', 'ng-model' => 'newProvider.rut_file'}
                      %md-icon{"md-svg-icon"=>"file:file_upload"} 
                      RUT file
              %div{:layout => "row", :flex => "20", "layout-align" => "space-between center"}
                %span
                  {{newProvider.rut_file[0].name}}
            %md-input-container{:style => "margin-top:26px"}
              %md-checkbox{"aria-label" => "Disabled", "ng-model" => "newProvider.has_company", "ng-change" => "check()"} It is a company?
          %div{:layout => "row", :flex => "20", "layout-align" => "space-between center"}
            %md-button{:class => "md-raised", "ng-click" => "back()"} Cancel
            %md-button{"ng-disabled" => "!providerCreateForm.$valid || !saveBtnEnabled", :class => "md-raised md-accent", "ng-click" => "createProvider()"} Save
            %md-button{"ng-disabled" => "!formTabControl.secondUnlocked", "ng-if" => "newProvider.has_company", :class => "md-raised md-primary", "ng-click" => "next()"} Next
      #tab2-content{"ng-if" => "newProvider.has_company", "aria-labelledby" => "tab2", "md-swipe-left" => "next()", "md-swipe-right" => "previous()", "ng-switch-when" => "1", :role => "tabpanel"} 
        %md-content.md-padding{:layout => "row", "layout-sm" => "column", "md-theme" => "default", :style => "font-size:1.2em"}
          %md-input-container{:flex => ""}
            %label Company Name
            %input{:name => "company_info_name", "ng-model" => "newProvider.company_info.name", :required => ""}
            %div{"ng-messages" => "providerCreateForm.company_info_name.$error"}
              %div{"ng-message" => "required"} This is required. 
          %md-input-container{:flex => ""}
            %label NIT
            %input{:name => "nit_number", "ng-model" => "newProvider.company_info.nit_number", :required => ""}
            %div{"ng-messages" => "providerCreateForm.nit_number.$error"}
              %div{"ng-message" => "required"} This is required. 
        %md-content.md-padding
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => ""}
              %label Legal Representative
              %input{:name => "legal_representative", "ng-model" => "newProvider.company_info.legal_representative", :required => ""}
              %div{"ng-messages" => "providerCreateForm.legal_representative.$error"}
                %div{"ng-message" => "required"} This is required.
            %md-select.layout-padding{:flex => "15", "ng-model" => "newProvider.company_info.id_type_legal_rep", :placeholder => "Legal Rep. ID Type"}
              %md-option{"ng-repeat" => "type in idTypeLegalRep", "ng-value" => "type.name"} {{ type.name }}
            %md-input-container{:flex => ""}
              %label Legal Representative ID
              %input{:name => "id_number_legal_rep", "ng-model" => "newProvider.company_info.id_number_legal_rep", :required => ""}
              %div{"ng-messages" => "providerCreateForm.id_number_legal_rep.$error"}
                %div{"ng-message" => "required"} This is required.          
          %div{:layout => "", "layout-sm" => "column"}
            %md-input-container{:flex => ""}
              %label Phone Number
              %input{:required => "true", :name => "company_phone_number", "ng-model" => "newProvider.company_info.phone_number", :placeholder => "(555) 555 5555"}
              %div{"ng-messages" => "providerCreateForm.company_phone_number.$error"}
                %div{"ng-message" => "required"} This is required
            %md-input-container{:flex => ""}
              %label E-mail
              %input{:required => "true", :type => "email", :name => "company_email", "ng-model" => "newProvider.company_info.email", :placeholder => "mail@example.com"}
              %div{"ng-messages" => "providerCreateForm.company_email.$error"}
                %div{"ng-message" => "required"} This is required
                %div{"ng-message" => "email"} Enter a valid email
          %div{:layout => "row", "layout-align" => "space-between center", "layout-margin" => "", "layout-sm" => "column"}
            %div{:layout => "row", :flex => "", "layout-align" => "start center"}
              %md-button{"ng-disabled" => "!formTabControl.secondUnlocked", :class => "md-raised md-primary", "ng-click" => "previous()"} Prev
            %div{:layout => "row", :flex => "15", "layout-align" => "space-between center"}
              %md-button{:class => "md-raised", "ng-click" => "back()"} Cancel
              %md-button{"ng-disabled" => "!providerCreateForm.$valid || !saveBtnEnabled", :class => "md-raised md-accent", "ng-click" => "createProvider()"} Save

