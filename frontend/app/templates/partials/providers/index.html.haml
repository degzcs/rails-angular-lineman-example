%md-content
  %div{:layout => "column"}
    .main-fab
      %a{"ui-sref" => "search_rucom"}
        %md-button.md-fab.md-accent{"aria-label" => "New", :md-ripple-size => "partial"} +
    %md-toolbar.md-tall{:layout => "column"}
      %span{:flex => "flex"}
      .md-toolbar-tools
        .fill-height{:layout => "row", :flex => "flex"}
          .md-toolbar-item.md-breadcrumb{"ng-hide" => "toggleSearch"}
            %span Providers
          %span{:flex => "flex", "ng-hide" => "toggleSearch"}
          %md-input-container{:flex => "flex", "ng-show" => "toggleSearch", :style => "padding-left:88px;"}
            %input#search-prov-name{"ng-model" => "search.$", :type => "text", :placeholder => "Name"}
          %md-input-container{:flex => "flex", "ng-show" => "toggleSearch", :style => "padding-left:88px;"}
            %input#search-prov-id{"ng-model" => "search.document_number", :type => "text", :placeholder => "ID"}
          .md-toolbar-item.md-tools{:layout => "row"}
            %a.md-button.md-default-theme{"ng-click" => "toggleSearch = !toggleSearch"}
              %i.ion-android-search
    %md-content{:flex => "flex", :layout => "column", "ng-click" => "toggleSearch=false"}
      %md-table-provider{:headers => "headers", :content => "content", :pages => "pages", :sortable => "sortable", :filters => "search", "custom-class" => "custom", :thumbs => "thumbs", :count => "count", :currentProvider => "currentProvider"}
