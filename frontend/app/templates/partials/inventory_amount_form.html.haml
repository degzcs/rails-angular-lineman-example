%md-dialog
  %md-content.sticky-container
    %md-subheader.md-sticky-no-effect.md-toolbar.md-primary 
      %h2
        %strong
          Gramos disponibles: 
          {{pickedItem.inventory_remaining_amount}}
    .dialog-inventory-form
      %form{:name => "gramsForm","ng-submit"=> "submitGrams()"}
        %md-input-container{"md-no-float"=>""}
          %input{ "type" => "number", "ng-model" => "grams", "name"=>"grams" , "min"=> "0.1", "max"=> "{{pickedItem.inventory_remaining_amount}}" , "required"=>"" ,"step"=>"any", "placeholder"=>"Gramos seleccionados"}
          %div{"ng-messages" => "gramsForm.grams.$error"}
            %div{"ng-message" => "min"} Debe escojer una cantidad mayor a 0
            %div{"ng-message" => "max"} La cantidad seleccionada excede la disponible
            %div{"ng-message" => "number"} Formato invalido
      %h4 
        Gramos restantes:
        {{pickedItem.inventory_remaining_amount-grams}}
      %md-button.md-raised{type: "submit"} Ok
