%div{:layout => "column"}
  %md-content{"class"=>"", "layout"=>"column", "layout-align"=>"center start"}
    %h4 Certificado de Origen Planta de Beneficio

  %md-content{ "flex"=>"", "class"=>"md-padding", "layout"=>"row"}

    %md-input-container{"flex"=>"33"}
      %label Fecha
      %input{"ng-model" => "beneficiation_plant_origin_certificate.date", "type" => "date", "required"=>""}

    %md-input-container{"flex"=>"66"}
      %label Numero consecutivo del Certificado de Origen
      %input{"ng-model" => "beneficiation_plant_origin_certificate.certificate_number", "type" => "text", "required"=>""}

  ////-----------------------Provider section ------------------------------////////
  %md-content{"class"=>"", "layout"=>"column", "layout-align"=>"center start"}
    %h4 Informacion del Comercializador

  %md-content{ "flex"=>"", "class"=>"", "layout"=>"row"}
    .select-provider{'flex' => ''}
      %md-chips{"md-autocomplete-snap" => "", "ng-model" => "beneficiation_plant_origin_certificate.provider"}
        %md-autocomplete{"md-selected-item"=>"beneficiation_plant_origin_certificate.provider", "md-search-text"=> "searchText", "md-items" => "provider in searchProvider(searchText)", "md-no-cache" => "true", "md-item-text"=>"provider.name", "placeholder" => "Buscar Proveedor por Cedula"}
          %span{"md-highlight-text" => "searchText"} {{provider.name}} - c.c. {{provider.document_number}}
    .create-provider{'flex' =>'10'}
      %a{'ng-href' => "#provider"}
        %md-button.md-fab.md-accent{} +
          %md-tooltip{"md-visible" => "demo.showTooltip"}
            Crear Proveedor
            %span.ion-android-checkmark-circle
    .column{"flex"=> ''}
      %md-select{"ng-model" => "beneficiation_plant_origin_certificate.provider.type", :placeholder => "Explotador  Minero Autorizado"}
        %md-option{:value => "barequero"} Barequero
        %md-option{:value => "chatarrero"} Chatarrero

    %md-content{'flex' => '', "class"=>"md-padding autocomplete", "layout"=>"column"}
      %span
        Nombre : {{beneficiation_plant_origin_certificate.provider.name}}
      %span
        CC : {{beneficiation_plant_origin_certificate.provider.document_number}}
      %span
        Departamento: {{beneficiation_plant_origin_certificate.provider.state}}
      %span
        city: {{beneficiation_plant_origin_certificate.provider.city}}

  ////-----------------------Minening Opertors section ------------------------------////////
  %md-content{"class"=>"", "layout"=>"column", "layout-align"=>"center start"}
    {{searchMining}}
  %md-content{"class"=>"", "layout"=>"column", "layout-align"=>"center start"}
    %h4 Informacion de los Explotadores Mineros autorizados que Benefician Minerales en la Planta

  %md-content{ "flex"=>"", "class"=>"", "layout"=>"column", 'ng-repeat' => 'mining_operator in mining_operators'}
    %md-content{ "flex"=>"", "class"=>"", "layout"=>"row"}
      .select-mining-operator{'flex' => ''}
        %md-chips{"md-autocomplete-snap" => "", "ng-model" => "mining_operator.data"}
          %md-autocomplete{"md-selected-item"=>"mining_operator.data", "md-search-text"=> "searchMining", "md-items" => "operator in searchProvider(searchMining)", "md-no-cache" => "true", "md-item-text"=>"operator.name", "placeholder" => "Buscar Minero (Proveedor) por Cedula"}
            %span{"md-highlight-text" => "searchMining"} {{operator.name}} - c.c. {{operator.document_number}}

      %md-content{'flex' => '', "class"=>"md-padding autocomplete", "layout"=>"column"}
        %span
          Nombre : {{mining_operator.name}}
        %span
          CC : {{mining_operator.document_number}}
        %span
          Departamento: {{mining_operator.state}}
        %span
          city: {{mining_operator.city}}

  %md-content{ "flex"=>"", "class"=>"", "layout"=>"row"}
    %md-button.md-primary.md-hue-2{'flex'=> '', "ng-click" => "addMiningOperator()"} Adherir Minero