          /------------------------ PURCHASES CARD ---------------------/
    %md-card.sell-card-info{flex: ""}
      %md-toolbar
        .md-toolbar-tools
          %h3
            %span Lotes Seleccionados
      %md-card-content
        .card-inputs
          %table.sale-table
            %tr.table-head
              %th Fecha Compra
              %th Nombre Proveedor
              %th Tipo Proveedor
              %th Gramos (Finos)
            %tr.stripped{"ng-repeat" => "associatedPurchase in saleOrder.associated_purchases"}
              %th {{associatedPurchase.created_at}}
              %td {{associatedPurchase.seller.first_name}} {{associatedPurchase.seller.last_name}}
              %td {{associatedPurchase.seller.provider_type}}
              %td {{associatedPurchase.fine_grams}}
              %td
            %tr.table-last{ layout: "row", layout-align: "end end" }
              %td
                %h2
                  %strong
                    Gramos Totales:

                    {{saleOrder.fine_grams}} grs
              %td
                %h2
                  %strong
                    Precio Total:

                    ${{saleOrder.price}}
