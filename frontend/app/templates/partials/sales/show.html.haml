%md-content.md-padding.sale-show-content
  %h1 Reporte - Remision
  %div{layout: "row"}
    /------------------------ CLIENT CARD ---------------------/
    %md-card.sell-card-info{flex:""}
      %md-toolbar
        .md-toolbar-tools
          %h3
            %span Datos Comprador
      %md-card-content
        .card-inputs
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Tipo
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.rucom.provider_type"}
            %md-input-container{flex: ""}
              %label Cedula
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.document_number"}
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Nombre
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.first_name"}
            %md-input-container{flex: ""}
              %label Apellido
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.last_name"}
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Telefono
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.phone_number"}
            %md-input-container{flex: ""}
              %label Direccion
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.address"}
          %div{layout: "row"}
            %md-input-container{flex: "50"}
              %label Correo
              %input{:disabled => "disabled", "ng-model" => "currentBuyer.email"}

    /------------------------ USER CARD ---------------------/
    %md-card.sell-card-info{flex: ""}
      %md-toolbar
        .md-toolbar-tools
          %h3
            %span Datos Vendedor
      %md-card-content
        .card-inputs
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Tipo
              %input{:disabled => "disabled",  "ng-model" => "currentUser.rucom.provider_type"}
            %md-input-container{flex: ""}
              %label Cedula
              %input{:disabled => "disabled", "ng-model" => "currentUser.document_number"}
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Nombre
              %input{:disabled => "disabled", "ng-model" => "currentUser.first_name"}
            %md-input-container{flex: ""}
              %label Apellido
              %input{:disabled => "disabled", "ng-model" => "currentUser.last_name"}
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Telefono
              %input{:disabled => "disabled", "ng-model" => "currentUser.phone_number"}
            %md-input-container{flex: ""}
              %label Direccion
              %input{:disabled => "disabled", "ng-model" => "currentUser.address"}
          %div{layout: "row"}
            %md-input-container{flex: ""}
              %label Email
              %input{:disabled => "disabled", "ng-model" => "currentUser.email"}
          /------------------------ PURCHASES CARD ---------------------/
    %md-card.sell-card-info{flex: ""}
      %md-toolbar
        .md-toolbar-tools
          %h3
            %span Lotes Seleccionados
      %md-card-content
        .card-inputs
          %table.sale-table
            %tr.table-head
              %th ID Compra
              %th ID Proveedor
              %th Nombre Proveedor
              %th Gramos (Finos)
            %tr.stripped{"ng-repeat"=>"associatedPurchase in currentSale.associated_purchases"}
              %td {{associatedPurchase.created_at}}
              %td {{associatedPurchase.seller.first_name}} {{associatedPurchase.seller.last_name}}
              %td {{associatedPurchase.seller.provider_type}}
              %td {{associatedPurchase.fine_grams}}
            %tr.table-last
              %td
              %td
              %td
              %td
                %h2
                  %strong
                    Gramos Totales:
                    %br
                    {{currentSale.totalAmount}} gr
                %h2
                  %strong
                    Precio Total:
                    %br
                    ${{currentSale.price}}


  %div{layout: "row"}
    %div{flex: ""}
      %h2
        %a.md-button{href: "{{purchase_files_collection_file_url}}", :target => "_blank"}
          Certificados de origen adjuntos
      %h2
        %a.md-button{href: "{{proof_of_sale_file_url}}", :target => "_blank"}
          Reporte de Venta

    %div{flex: ""}
      /%h2{style: "text-align: left;"} Codigo de venta
      %div{"ng-bind-html"=>"barcode_html"}
      {{code}}