/------------------- DASHBOARD VIEW -------------------/
%div{"ng-hide"=>"showLoading"}

%div{layout: "row", "layout-margin", "layout-fill", "layout-padding", "layout-align" => "center"}
  %div{layout: "column", flex: "25"}
    .dashboard-user-info{ }
      %img.user-photo{alt:"user-photo", "ng-src" => "{{currentUser.photo_file.thumb.url || 'img/default-user.png'}}"}
    .dashboard-user-utilities{layout: "column"}
      Facturación y documento 
      %br Editar información
      %md-button{"ng-controller"=>"SidebarCtrl", "aria-label" => "providers","ng-click"=>"logout()", "target"=>"_blank"}Cerrar Sesión
  %div{layout: "column", flex: "40"}
    .dashboard-user-utilities
      %h3{"style" => "margin: 0px;"}
        BIENVENIDO
      %h4{ "style" => "text-transform: uppercase; margin: 0px; font-weight: 300;"}
        {{currentUser.first_name}} {{currentUser.last_name}}

      %br
      Comprador

      %br
      Documento de Trazoro: {{currentUser.document_number}}

      %br
      Correo electrónico: {{currentUser.email}}

      %h4{"style" => "margin-bottom: 0px; font-weight: 300;"}
        Servicios Adquiridos:
      %hr{"width"=> "80%", "color"=>"#E3CD48","align"=>"left"}
      %md-content
        %md-list
          %h3{"ng-if" => "!currentUser.trazoro_services.length"} No hay servicios trazoro
          %md-list-item{"ng-repeat" => "services in currentUser.trazoro_services"}
            .md-list-item-text
              {{services.name}}
            %md-divider{"ng-if" => "!$last"}

  .dashboard-credit-info{layout: "column", flex: "20"}
    %span.subtitle{}
      CRÉDITOS RESTANTES
    %br{}
      %span.num-credits{}
        {{available_credits}}
    %md-button.md-raised.bt-buy-credits{"ng-click"=>"showCreditBillingForm($event)"}
      Comprar Créditos



