/------------------- DASHBOARD VIEW -------------------/
.dashboard-content
  .dashboard-user-info
    %div{layout: "row"}
      .user-photo-container
        %img.user-photo{alt:"user-photo", "ng-src" => "{{currentUser.photo_file || 'img/default-user.png'}}"}
      .info-container
        %h4 
          Nombre:
          .info
            {{currentUser.first_name}} {{currentUser.last_name}}
        %h4 
          Numero de Documento:
          .info
            {{currentUser.document_number}}
        %h4 
          Email:
          .info
            {{currentUser.email}}
  .dashboard-credit-info
    .credits 
      %h3
        Creditos Restantes
      .value
        {{currentUser.available_credits}}
    %br
    %md-button.md-raised.md-primary.bt-buy-credits{"ng-click"=>"showCreditBillingForm($event)"}
      Comprar Créditos


