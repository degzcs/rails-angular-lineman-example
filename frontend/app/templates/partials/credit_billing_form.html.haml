%md-dialog
  %md-content.sticky-container.md-padding
    %h3 POR FAVOR SELECCIONE LOS CREDITOS QUE DESEA COMPRAR
    .dialog-content
      %form{:name => "creditBillingForm","ng-submit"=> "confirmCreditBilling()"}
        %md-content.md-padding
          %md-input-container
            %input{ "type" => "number", "string-to-number"=>"",'ng-model' => 'quantity', :required=>"", :name => 'quantity', :min => "1", "placeholder" => "Creditos Solicitados"}
          %br
          %div{layout: "row", "layout-align" => "center"}
            %md-button.btn-back-black{"ng-click"=>"cancel()"}
              %md-icon{ "md-svg-icon"=>"/img/icons/purchase/back-flecha-yellow.svg" }
              Volver

            %md-button.btn-next.md-raised.md-primary{type: "submit"}
              Solicitar
              %md-icon{ "md-svg-icon"=>"/img/icons/landing/flecha-negra.svg" }
