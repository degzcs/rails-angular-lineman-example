%div{:layout => "column", "ng-if"=>"currentAuthorizedProvider","ng-hide"=>"showLoading"}
  %form{:name => "providerEditionForm", "novalidate" => "novalidate"}
    .provider-info
      %div{layout: 'row'}
        .photo-container{flex: '30'}
          %img.face{:alt => "", "ng-src" => "{{currentAuthorizedProvider.photo_file.url}}"}
        .fields-container{flex: '70'}
          %h3{style: "text-align: left;"} Datos personales:
          %div{layout: 'row'}
            %md-input-container{:flex => ""}
              %label Nombre
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.first_name"}
            %md-input-container{:flex => ""}
              %label Apellido
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.last_name"}
            %md-input-container{:flex => ""}
              %label {{rucomIDField.label}}
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.rucom.rucom_number"}
              / %md-tooltip{"md-direction" => "right", "md-visible" => "true"}
              /   %span.ion-android-checkmark-circle &nbsp;válido
          %div{layout: 'row'}
            %md-input-container{:flex => ""}
              %label Número de Identificación
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.document_number"}
            %md-input-container{"ng-if" => "currentAuthorizedProvider.rucom.status", :flex => ""}
              %label Estado del Rucom
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.rucom.status"}
            %md-input-container{:flex => ""}
              %label Tipo de Proveedor
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.rucom.provider_type"}
          %div{layout: 'row'}
            %md-input-container{:flex => ""}
              %label Teléfono
              %input{:required => "true", :name => "phone_number", "ng-model" => "currentAuthorizedProvider.phone_number", :placeholder => "(555) 555 5555"}
              %div{"ng-messages" => "providerEditionForm.phone_number.$error"}
                %div{"ng-message" => "required"} Este campo es requerido
            %md-input-container{:flex => ""}
              %label E-mail
              %input{:required => "true", :type => "email", :name => "email", "ng-model" => "currentAuthorizedProvider.email", :placeholder => "mail@example.com"}
              %div{"ng-messages" => "providerEditionForm.email.$error"}
                %div{"ng-message" => "required"} Este campo es requerido
                %div{"ng-message" => "email"} Ingrese un e-mail válido
            %md-input-container{:flex => ""}
              %label Dirección
              %input{:required => "true", :name => "address", "ng-model" => "currentAuthorizedProvider.address", :placeholder => "CLL/CR 1 2 - 34"}
              %div{"ng-messages" => "providerEditionForm.address.$error"}
                %div{"ng-message" => "required"} Este campo es requerido
          %h3{style: "text-align: left;"} Centro Poblado:
          %div{layout: 'row'}
            %md-input-container{:flex => ""}
              %label Departamento
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.state.name"}
            %md-input-container{:flex => ""}
              %label Municipio
              %input{:readonly => "true", "ng-model" => "currentAuthorizedProvider.city.name"}
          %div.info-buttons{layout: 'row', "layout-align"=> "end center"}
            %md-button.btn-cancel{:class => "md-raised", "ng-click" => "back()"} Volver
            %md-button.btn-save{"ng-disabled" => "!providerEditionForm.$valid || !saveBtnEnabled", :class => "md-raised md-warn", "ng-click" => "save()"} Guardar Cambios

%tr-loading-view{"ng-show"=>"showLoading","mode"=>"loadingMode","progress"=>"loadingProgress", "message"=>"loadingMessage"}
