%div{"layout"=>"row","layout-align"=> "center"}
  %md-card.md-card-login{"flex-gt-md"=>"50","flex-sm"=>"80","flex-md"=>"60"}
    %md-content.md-padding
      %h3 Login 
      %form{ "ng-submit"=> "login()"}
        %md-content.md-padding
          %md-input-container{"md-no-float" => ""}
            %input{"ng-model" => "email", :placeholder => "Email", :type => "email", "required"=>""}
            %div{"ng-messages" => "loginForm.$error", "ng-show" => "loginForm.$dirty"}
              %div{"ng-message" => "required"} This is required!
          %md-input-container{"md-no-float" => ""}
            /%md-icon{"md-svg-src" => "/demo-partials/input/demoIcons/icons/ic_phone_24px.svg"}
            %input{"ng-model" => "pasword", :placeholder => "Password", :type => "password"}
            
          %md-button{"ng-disabled"=>"loginForm.$invalid"}
            Log in

